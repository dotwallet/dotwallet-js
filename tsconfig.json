{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es2017", "dom"],
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "incremental": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "pretty": true
  },
  "include": [
    "src/**/*.ts"
  ]
}